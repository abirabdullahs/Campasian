<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.campasian.controller.LostFoundModalController"
      styleClass="modal-root"
      stylesheets="@../styles/style.css, @../styles/app.css"
      prefWidth="420" prefHeight="420">
    <padding><Insets top="24" right="24" bottom="24" left="24"/></padding>
    <VBox spacing="4">
        <Label text="Post Lost or Found" styleClass="cc-headline"/>
        <Label text="Include the location where the item was last seen. Required." styleClass="cc-description" wrapText="true"/>
    </VBox>
    <Label text="Type" styleClass="profile-label"/>
    <ComboBox fx:id="typeCombo" styleClass="material-input" prefWidth="Infinity"/>
    <Label text="Title" styleClass="profile-label"/>
    <TextField fx:id="titleField" styleClass="material-input" promptText="Brief description"/>
    <Label text="Location (required)" styleClass="profile-label"/>
    <TextField fx:id="locationField" styleClass="material-input" promptText="Where was it last seen?"/>
    <Label text="Description" styleClass="profile-label"/>
    <TextArea fx:id="descField" styleClass="modal-text-area" promptText="Additional details..." wrapText="true" prefRowCount="3"/>
    <HBox spacing="12" alignment="CENTER_RIGHT">
        <Button text="Cancel" styleClass="btn-secondary" onAction="#onCancel"/>
        <Button text="Post" styleClass="btn-primary" onAction="#onPost"/>
    </HBox>
</VBox>
