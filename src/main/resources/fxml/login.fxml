<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<GridPane maxHeight="Infinity" maxWidth="Infinity" minHeight="600" minWidth="900" prefHeight="700" prefWidth="1200" styleClass="root" stylesheets="@../styles/signup.css" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/17.0.12" fx:controller="com.campasian.controller.LoginController">
    <columnConstraints>
        <ColumnConstraints halignment="CENTER" percentWidth="50" />
        <ColumnConstraints halignment="CENTER" percentWidth="50" />
    </columnConstraints>
    <rowConstraints>
        <RowConstraints vgrow="ALWAYS" />
    </rowConstraints>

    <!-- Left: Branding + Info panel -->
    <VBox alignment="CENTER_LEFT" spacing="32" styleClass="info-panel" GridPane.columnIndex="0">
        <VBox spacing="6">
            <Label styleClass="brand-name" text="Campasian">
            <font>
               <Font name="Poppins Bold" size="24.0" />
            </font></Label>
            <Label styleClass="brand-tagline" text="Campus life, connected." />
        </VBox>

        <Separator styleClass="divider" />

        <VBox spacing="20">
            <Label styleClass="page-title" text="Welcome back." />
            <Label styleClass="page-description" text="Sign in to reconnect with your campus — your classmates, communities, and everything happening around you." wrapText="true" />
        </VBox>

        <VBox spacing="14" styleClass="features-list">
            <HBox alignment="CENTER_LEFT" spacing="12">
                <Label styleClass="bullet" text="●" />
                <Label styleClass="feature-text" text="Share updates with classmates" />
            </HBox>
            <HBox alignment="CENTER_LEFT" spacing="12">
                <Label styleClass="bullet" text="●" />
                <Label styleClass="feature-text" text="Discover people across campus" />
            </HBox>
            <HBox alignment="CENTER_LEFT" spacing="12">
                <Label styleClass="bullet" text="●" />
                <Label styleClass="feature-text" text="Build your network in minutes" />
            </HBox>
        </VBox>

        <Label styleClass="terms-text" text="Your campus, your connections — all in one place." wrapText="true" />
    </VBox>

    <!-- Right: Login Form -->
    <StackPane styleClass="form-panel" GridPane.columnIndex="1">
        <VBox alignment="CENTER_LEFT" maxWidth="480" spacing="14" styleClass="form-inner">
            <Label styleClass="form-title" text="Sign in to your account" />
            <Label styleClass="form-subtitle" text="Enter your credentials to access your Campasian account." wrapText="true" />

            <TextField fx:id="emailField" prefWidth="360" promptText="Email address" styleClass="input-field" />
            <PasswordField fx:id="passwordField" prefWidth="360" promptText="Password" styleClass="input-field" />
            <CheckBox fx:id="rememberMeCheck" prefWidth="360" styleClass="check-box-style" text="Remember me" />

            <Label fx:id="errorLabel" managed="false" prefWidth="360" styleClass="error-label" />

            <Button onAction="#onLoginClick" prefWidth="360" styleClass="btn-primary" text="Sign in" />
            <Button onAction="#onSignupLinkClick" styleClass="btn-link" text="Don't have an account? Sign up" />
        </VBox>
    </StackPane>
</GridPane>
