<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.campasian.controller.CommunityController"
      styleClass="dashboard-main"
      stylesheets="@../styles/style.css"
      spacing="24" maxWidth="Infinity" maxHeight="Infinity">
    <padding>
        <Insets top="24" right="24" bottom="24" left="24"/>
    </padding>
    <!-- Page header -->
    <VBox styleClass="cc-header" spacing="4">
        <Label text="Community" styleClass="cc-headline"/>
        <Label text="Find groups, events, and campus conversations. More features coming soon." styleClass="cc-description" wrapText="true"/>
    </VBox>
    <VBox styleClass="profile-card" spacing="16" maxWidth="600">
        <Label text="Join Campus Groups" styleClass="profile-card-title"/>
        <Label text="Discover and connect with communities on campus. Coming soon!" styleClass="profile-label"/>
    </VBox>
</VBox>
