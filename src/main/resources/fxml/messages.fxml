<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.abir.demo.controllers.MessagesController"
            style="-fx-background-color: linear-gradient(135deg, #0f172a 0%, #111827 30%, #0b1225 100%);">

    <!-- Top Navigation -->
    <top>
        <HBox spacing="15" style="-fx-padding: 15 20; -fx-background-color: rgba(15,23,42,0.9);"
              alignment="CENTER_LEFT">
            <Label text="Campasian" style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: white;"/>
            <Separator orientation="VERTICAL"/>
            <Button text="ðŸ  Feed" onAction="#goToDashboard" style="-fx-text-fill: white; -fx-background-color: transparent;"/>
            <Button text="ðŸ‘¤ Profile" onAction="#goToProfile" style="-fx-text-fill: white; -fx-background-color: transparent;"/>
            <Button text="ðŸ‘¥ Browse" onAction="#goToBrowseUsers" style="-fx-text-fill: white; -fx-background-color: transparent;"/>
            <Button text="ðŸŽ‰ Events" onAction="#goToEvents" style="-fx-text-fill: white; -fx-background-color: transparent;"/>
            <Button text="ðŸŽ“ Clubs" onAction="#goToClubs" style="-fx-text-fill: white; -fx-background-color: transparent;"/>
            <Button text="ðŸ’¬ Messages" style="-fx-text-fill: white; -fx-background-color: transparent;"/>
            <Region HBox.hgrow="ALWAYS"/>
            <Button text="ðŸšª Logout" onAction="#logout" style="-fx-text-fill: white; -fx-background-color: transparent;"/>
        </HBox>
    </top>

    <!-- Messages Content -->
    <center>
        <HBox spacing="0" style="-fx-padding: 0;">
            <!-- Conversations List -->
            <VBox style="-fx-padding: 20; -fx-border-color: rgba(255,255,255,0.2);" prefWidth="250">
                <Label text="Conversations" style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: white; -fx-padding: 0 0 10 0;"/>
                <ListView fx:id="conversationsList" style="-fx-control-inner-background: rgba(255,255,255,0.05); -fx-text-fill: white;"/>
            </VBox>

            <!-- Chat Area -->
            <VBox spacing="10" style="-fx-padding: 20; -fx-hgrow: ALWAYS;">
                <!-- Selected User Label -->
                <Label fx:id="selectedUserLabel" text="Select a conversation" 
                       style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: white;"/>

                <!-- Messages Display -->
                <ScrollPane style="-fx-background: transparent; -fx-control-inner-background: transparent; -fx-hgrow: ALWAYS;">
                    <VBox fx:id="chatArea" spacing="5" style="-fx-padding: 10; -fx-background-color: rgba(255,255,255,0.02);"/>
                </ScrollPane>

                <!-- Message Input -->
                <VBox spacing="10">
                    <TextArea fx:id="messageInput" promptText="Type your message..." wrapText="true" prefRowCount="3"
                             style="-fx-control-inner-background: rgba(255,255,255,0.1); -fx-text-fill: white;"/>
                    <Button fx:id="sendButton" text="Send Message"/>
                </VBox>
            </VBox>
        </HBox>
    </center>
</BorderPane>
