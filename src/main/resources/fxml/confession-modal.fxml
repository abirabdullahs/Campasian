<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.campasian.controller.ConfessionModalController"
      styleClass="modal-root"
      stylesheets="@../styles/style.css,@../styles/app.css"
      prefWidth="400" prefHeight="280">
    <padding><Insets top="24" right="24" bottom="24" left="24"/></padding>
    <VBox spacing="4">
        <Label text="Post Confession" styleClass="cc-headline"/>
        <Label text="Your identity will remain anonymous." styleClass="cc-description" wrapText="true"/>
    </VBox>
    <Label text="What's on your mind?" styleClass="profile-label"/>
    <TextArea fx:id="contentField" styleClass="modal-text-area" promptText="Write here..." wrapText="true" prefRowCount="5"/>
    <HBox spacing="12" alignment="CENTER_RIGHT">
        <Button text="Cancel" styleClass="btn-secondary" onAction="#onCancel"/>
        <Button text="Post" styleClass="btn-primary" onAction="#onPost"/>
    </HBox>
</VBox>
