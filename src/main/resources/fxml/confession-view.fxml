<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.campasian.controller.ConfessionController"
      styleClass="confession-root"
      stylesheets="@../styles/confession.css,@../styles/app.css"
      maxWidth="Infinity" maxHeight="Infinity">
    <padding><Insets top="24" right="24" bottom="24" left="24"/></padding>

    <VBox styleClass="page-header" spacing="4">
        <Label text="Anonymous Confession Wall" styleClass="page-title"/>
        <Label text="Share your thoughts anonymously. No names or profiles are shown." styleClass="page-subtitle" wrapText="true"/>
    </VBox>

    <Button fx:id="postBtn" text="+ Post Confession" styleClass="btn-primary" style="-fx-margin: 0 0 12 0;" onAction="#onPostClick"/>

    <ScrollPane fitToWidth="true" styleClass="feed-scroll" VBox.vgrow="ALWAYS">
        <VBox fx:id="itemsVBox" spacing="12" styleClass="feed-container"/>
    </ScrollPane>
</VBox>
