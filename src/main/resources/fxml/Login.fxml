<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.*?>
<?import javafx.scene.text.*?>

<BorderPane styleClass="root-container" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.abir.demo.controllers.LoginController">

    <!-- Main Content Area -->
    <center>
        <HBox alignment="TOP_CENTER" spacing="60" style="-fx-padding: 40 60 30 60;" styleClass="content-wrapper">

            <!-- Left Side - Custom Design Section (No Image Needed!) -->
            <VBox alignment="TOP_CENTER" spacing="28" style="-fx-background-color: linear-gradient(135deg, rgba(102,126,234,0.2), rgba(245,87,108,0.2));                          -fx-background-radius: 35;                          -fx-padding: 40 40 45 40;                          -fx-effect: dropshadow(gaussian, rgba(102,126,234,0.4), 35, 0.3, 0, 12);                          -fx-border-color: linear-gradient(to bottom, rgba(255,255,255,0.4), rgba(255,255,255,0.2));                          -fx-border-width: 3;                          -fx-border-radius: 35;                          -fx-min-width: 430px;                          -fx-min-height: 520px;">

                <!-- Decorative Circle Design -->
                <StackPane style="-fx-padding: 20;">
                    <!-- Outer Circle 1 - Animated Blue-Purple -->
                    <Circle radius="140" style="-fx-fill: linear-gradient(from 0% 0% to 100% 100%, rgba(102,126,234,0.3), rgba(118,75,162,0.3));                                    -fx-effect: dropshadow(gaussian, rgba(102,126,234,0.5), 20, 0.5, 0, 0);" />

                    <!-- Outer Circle 2 - Pink-Yellow -->
                    <Circle radius="110" style="-fx-fill: linear-gradient(from 100% 0% to 0% 100%, rgba(245,87,108,0.4), rgba(255,216,118,0.4));                                    -fx-effect: dropshadow(gaussian, rgba(245,87,108,0.4), 15, 0.4, 0, 0);" />

                    <!-- Inner White Circle -->
                    <Circle radius="80" style="-fx-fill: linear-gradient(from 0% 100% to 100% 0%, rgba(255,255,255,0.9), rgba(240,248,255,0.9));                                    -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 10, 0.3, 0, 5);" />

                    <!-- Central Icon/Design -->
                    <VBox alignment="CENTER" spacing="15">
                        <!-- Top Circle -->
                        <Circle radius="25" style="-fx-fill: linear-gradient(to bottom, #667eea, #764ba2);                                        -fx-effect: dropshadow(gaussian, rgba(102,126,234,0.6), 10, 0.5, 0, 3);" />

                        <!-- Middle Bars -->
                        <HBox alignment="CENTER" spacing="8">
                            <Rectangle arcHeight="5" arcWidth="5" height="8" style="-fx-fill: linear-gradient(to right, #667eea, #f5576c);" width="30" />
                            <Rectangle arcHeight="5" arcWidth="5" height="8" style="-fx-fill: linear-gradient(to right, #764ba2, #ffd876);" width="30" />
                            <Rectangle arcHeight="5" arcWidth="5" height="8" style="-fx-fill: linear-gradient(to right, #f093fb, #667eea);" width="30" />
                        </HBox>

                        <!-- Bottom Circle -->
                        <Circle radius="20" style="-fx-fill: linear-gradient(to top, #f5576c, #ffd876);                                        -fx-effect: dropshadow(gaussian, rgba(245,87,108,0.6), 10, 0.5, 0, 3);" />
                    </VBox>
                </StackPane>

                <!-- App Name Display -->
                <VBox alignment="CENTER" spacing="10">
                    <Text style="-fx-fill: linear-gradient(from 0% 0% to 100% 100%, #5b6ee1, #f06b7b);                                  -fx-font-family: 'Poppins SemiBold';                                  -fx-font-size: 40px;" text="Campasian" textAlignment="CENTER" />

                    <Text style="-fx-fill: rgba(0,0,0);                                  -fx-font-family: 'Poppins';                                  -fx-font-size: 16px;                                  -fx-font-style: bold;" text="Your Gateway to Success" textAlignment="CENTER" wrappingWidth="350" />
                </VBox>

                <!-- Decorative Bottom Dots -->
                <HBox alignment="CENTER" spacing="12" style="-fx-padding: 10 0 0 0;">
                    <Circle radius="8" style="-fx-fill: #667eea;                                    -fx-effect: dropshadow(gaussian, rgba(102,126,234,0.6), 8, 0.5, 0, 2);" />
                    <Circle radius="8" style="-fx-fill: #764ba2;                                    -fx-effect: dropshadow(gaussian, rgba(118,75,162,0.6), 8, 0.5, 0, 2);" />
                    <Circle radius="8" style="-fx-fill: #f5576c;                                    -fx-effect: dropshadow(gaussian, rgba(245,87,108,0.6), 8, 0.5, 0, 2);" />
                    <Circle radius="8" style="-fx-fill: #ffd876;                                    -fx-effect: dropshadow(gaussian, rgba(255,216,118,0.6), 8, 0.5, 0, 2);" />
                </HBox>

            </VBox>

            <!-- Right Side - Login Form -->
            <VBox alignment="TOP_CENTER" spacing="22" style="-fx-background-color: linear-gradient(to bottom right, rgba(255,255,255,0.95), rgba(240,248,255,0.98));                          -fx-background-radius: 35;                          -fx-padding: 40 45 45 45;                          -fx-effect: dropshadow(gaussian, rgba(102,126,234,0.4), 40, 0.3, 0, 15);                          -fx-border-color: linear-gradient(to bottom, #667eea, #764ba2);                          -fx-border-width: 3;                          -fx-border-radius: 35;" styleClass="login-section">

                <!-- App Title -->
                <VBox alignment="CENTER" spacing="10">
                    <Text style="-fx-fill: linear-gradient(from 0% 0% to 100% 100%, #5b6ee1 0%, #6d54a8 55%, #f06b7b 100%);                                  -fx-font-family: 'Poppins Semibold';                                  -fx-font-size: 48px;" text="Campasian" textAlignment="CENTER">
                  <font>
                     <Font name="Poppins Bold" size="20.0" />
                  </font></Text>
                    <Text style="-fx-fill: linear-gradient(to right, #764ba2, #667eea);                                  -fx-font-family: 'Verdana';                                  -fx-font-size: 20px;                                  -fx-font-weight: 600;" text="Welcome Back!" textAlignment="CENTER">
                    </Text>
                </VBox>

                <!-- Login Form Container -->
                <VBox spacing="20" style="-fx-padding: 20 0 0 0;">

                    <!-- Username Field -->
                    <VBox spacing="8">
                        <Label style="-fx-text-fill: #333;                                       -fx-font-family: 'Segoe UI';                                       -fx-font-weight: bold;                                       -fx-font-size: 13px;" text="Username">
                        </Label>
                        <HBox alignment="CENTER_LEFT" spacing="12" style="-fx-background-color: linear-gradient(to right, #f0f9ff, #fef3f7);                                      -fx-background-radius: 15;                                      -fx-border-color: linear-gradient(to right, #667eea, #f5576c);                                      -fx-border-width: 2;                                      -fx-border-radius: 15;                                      -fx-effect: dropshadow(gaussian, rgba(102,126,234,0.2), 10, 0.4, 0, 3);                                      -fx-padding: 12 15;">
                            <Label style="-fx-font-size: 20px;" text="ðŸ‘¤" />
                            <TextField fx:id="usernameField" promptText="Enter your username" style="-fx-background-color: transparent;                                               -fx-border-width: 0;                                               -fx-text-fill: #333;                                               -fx-prompt-text-fill: #999;                                               -fx-font-size: 14px;                                               -fx-font-family: 'Segoe UI';                                               -fx-pref-width: 280px;" />
                        </HBox>
                    </VBox>

                    <!-- Password Field -->
                    <VBox spacing="8">
                        <Label style="-fx-text-fill: #333;                                       -fx-font-family: 'Segoe UI';                                       -fx-font-weight: bold;                                       -fx-font-size: 13px;" text="Password">
                        </Label>
                        <HBox alignment="CENTER_LEFT" spacing="12" style="-fx-background-color: linear-gradient(to right, #fef3f7, #fffbf0);                                      -fx-background-radius: 15;                                      -fx-border-color: linear-gradient(to right, #f5576c, #ffd876);                                      -fx-border-width: 2;                                      -fx-border-radius: 15;                                      -fx-effect: dropshadow(gaussian, rgba(245,87,108,0.2), 10, 0.4, 0, 3);                                      -fx-padding: 12 15;">
                            <Label style="-fx-font-size: 20px;" text="ðŸ”’" />
                            <PasswordField fx:id="passwordField" promptText="Enter your password" style="-fx-background-color: transparent;                                                   -fx-border-width: 0;                                                   -fx-text-fill: #333;                                                   -fx-prompt-text-fill: #999;                                                   -fx-font-size: 14px;                                                   -fx-font-family: 'Segoe UI';                                                   -fx-pref-width: 280px;" />
                        </HBox>
                    </VBox>

                    <!-- Remember Me & Forgot Password -->
                    <HBox alignment="CENTER_LEFT" spacing="10" style="-fx-padding: 5 0;">
                        <CheckBox fx:id="rememberCheckbox" style="-fx-text-fill: #555;                                          -fx-font-size: 13px;                                          -fx-font-weight: 600;" text="Remember me" />
                        <Region HBox.hgrow="ALWAYS" />
                        <Hyperlink style="-fx-text-fill: #764ba2;                                           -fx-font-size: 13px;                                           -fx-border-width: 0;                                           -fx-underline: false;                                           -fx-font-weight: bold;" text="Forgot Password?" />
                    </HBox>

                    <!-- Login Button -->
                    <Button fx:id="loginButton" maxWidth="Infinity" style="-fx-background-color: linear-gradient(to right, #667eea 0%, #764ba2 50%, #f5576c 100%);                                    -fx-text-fill: white;                                    -fx-background-radius: 15;                                    -fx-cursor: hand;                                    -fx-padding: 16 0;                                    -fx-effect: dropshadow(gaussian, rgba(102,126,234,0.6), 20, 0.5, 0, 8);                                    -fx-font-family: 'Segoe UI';                                    -fx-font-weight: bold;                                    -fx-font-size: 16px;" text="LOGIN">
                    </Button>

                    <!-- Sign Up Link -->
                    <HBox alignment="CENTER" spacing="5" style="-fx-padding: 5 0;">
                        <Label style="-fx-text-fill: #666;                                       -fx-font-size: 14px;" text="Don't have an account?" />
                        <Hyperlink style="-fx-text-fill: linear-gradient(to right, #667eea, #f5576c);                                           -fx-font-size: 14px;                                           -fx-font-weight: bold;                                           -fx-border-width: 0;                                           -fx-underline: false;" text="Sign Up" />
                    </HBox>

                </VBox>


            </VBox>

        </HBox>
    </center>

    <!-- Footer -->
    <bottom>
        <HBox alignment="CENTER" styleClass="footer">
            <padding>
                <Insets bottom="20" top="20" />
            </padding>
            <Label styleClass="footer-text" text="Â© 2026 Campasian. All rights reserved." />
        </HBox>
    </bottom>

</BorderPane>
