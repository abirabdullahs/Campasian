<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.shape.*?>

<BorderPane xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.abir.demo.controllers.HomeController"
            style="-fx-background-color: linear-gradient(135deg, #0f172a 0%, #111827 30%, #0b1225 100%);">

    <center>
        <StackPane BorderPane.alignment="CENTER" style="-fx-padding: 50 60 50 60;">

            <!-- SVG backdrop -->
            <Pane maxWidth="900" maxHeight="520" pickOnBounds="false">
                <SVGPath content="M 40 140 C 120 40, 260 20, 360 90 C 460 160, 440 300, 320 320 C 200 340, 120 300, 70 240 C 20 180, 10 160, 40 140 Z"
                        style="-fx-fill: linear-gradient(from 0% 0% to 100% 100%, rgba(56,189,248,0.55), rgba(168,85,247,0.55));"/>
                <SVGPath content="M 520 40 C 640 10, 800 80, 820 200 C 840 320, 720 420, 600 390 C 480 360, 430 240, 470 140 C 490 90, 510 60, 520 40 Z"
                        style="-fx-fill: linear-gradient(from 0% 100% to 100% 0%, rgba(244,63,94,0.5), rgba(251,191,36,0.55));"/>
                <SVGPath content="M 140 380 C 200 320, 340 310, 420 360 C 500 410, 520 500, 430 520 C 340 540, 230 520, 170 470 C 110 420, 100 410, 140 380 Z"
                        style="-fx-fill: linear-gradient(from 100% 0% to 0% 100%, rgba(34,211,238,0.45), rgba(99,102,241,0.5));"/>
                <Circle radius="90" layoutX="120" layoutY="70"
                        style="-fx-fill: radial-gradient(center 30% 30%, radius 75%, rgba(59,130,246,0.65), rgba(14,165,233,0.0));"/>
                <Circle radius="80" layoutX="780" layoutY="420"
                        style="-fx-fill: radial-gradient(center 30% 30%, radius 75%, rgba(244,63,94,0.6), rgba(244,63,94,0.0));"/>
            </Pane>

            <!-- Glass card -->
            <VBox alignment="CENTER" spacing="22"
                  style="-fx-background-color: rgba(255,255,255,0.06);
                         -fx-background-radius: 32;
                         -fx-border-color: rgba(255,255,255,0.2);
                         -fx-border-radius: 32;
                         -fx-border-width: 1.2;
                         -fx-padding: 48 70 52 70;
                         -fx-max-width: 760;">

                <Label text="CAMPASIAN"
                       style="-fx-text-fill: rgba(255,255,255,0.7);
                              -fx-font-family: 'Segoe UI Semibold', 'Poppins SemiBold';
                              -fx-font-size: 14px;
                              -fx-letter-spacing: 2px;"/>

                <Text text="Campasian" textAlignment="CENTER"
                      style="-fx-fill: linear-gradient(from 0% 0% to 100% 100%, #38bdf8 0%, #a855f7 45%, #f43f5e 75%, #f59e0b 100%);
                             -fx-font-family: 'Poppins Black', 'Segoe UI Black';
                             -fx-font-size: 64px;"/>

                <Text text="Build your campus circle. Share ideas. Discover events."
                      textAlignment="CENTER" wrappingWidth="560"
                      style="-fx-fill: rgba(255,255,255,0.9);
                             -fx-font-family: 'Segoe UI', 'Poppins';
                             -fx-font-size: 18px;"/>

                <HBox spacing="10" alignment="CENTER">
                    <Label text="Clubs" style="-fx-text-fill: white; -fx-background-color: rgba(56,189,248,0.3); -fx-background-radius: 14; -fx-padding: 6 14;"/>
                    <Label text="Chats" style="-fx-text-fill: white; -fx-background-color: rgba(168,85,247,0.3); -fx-background-radius: 14; -fx-padding: 6 14;"/>
                    <Label text="Events" style="-fx-text-fill: white; -fx-background-color: rgba(244,63,94,0.3); -fx-background-radius: 14; -fx-padding: 6 14;"/>
                    <Label text="Jobs" style="-fx-text-fill: white; -fx-background-color: rgba(245,158,11,0.3); -fx-background-radius: 14; -fx-padding: 6 14;"/>
                </HBox>

                <Button fx:id="loginButton" text="Get Started ->" onAction="#handleLogin"
                        style="-fx-background-color: linear-gradient(to right, #38bdf8, #a855f7, #f43f5e);
                               -fx-text-fill: white;
                               -fx-background-radius: 999;
                               -fx-padding: 16 60;
                               -fx-cursor: hand;
                               -fx-font-family: 'Segoe UI Semibold', 'Poppins SemiBold';
                               -fx-font-size: 18px;"/>

                <Label text="Secure. Fast. Designed for students."
                       style="-fx-text-fill: rgba(255,255,255,0.7); -fx-font-size: 13px;"/>
            </VBox>
        </StackPane>
    </center>

    <bottom>
        <HBox alignment="CENTER" style="-fx-padding: 0 0 24 0;">
            <Label text="(c) 2026 Campasian. All rights reserved."
                   style="-fx-text-fill: rgba(255,255,255,0.6); -fx-font-size: 12px;"/>
        </HBox>
    </bottom>

</BorderPane>

