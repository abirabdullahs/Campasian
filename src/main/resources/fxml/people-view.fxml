<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.campasian.controller.PeopleController"
      styleClass="people-root"
      stylesheets="@../styles/people.css"
      spacing="0" maxWidth="Infinity" maxHeight="Infinity">

    <!-- ── Top Bar ── -->
    <HBox styleClass="people-topbar" alignment="CENTER_LEFT" spacing="12">
        <Label text="⊕" styleClass="people-topbar-icon"/>
        <VBox spacing="1" HBox.hgrow="ALWAYS">
            <Label text="Discover People" styleClass="people-topbar-title"/>
            <Label text="Find and connect with fellow students across campus." styleClass="people-topbar-sub"/>
        </VBox>
        <HBox styleClass="people-count-badge" spacing="6" alignment="CENTER">
            <Label text="⊞" styleClass="people-badge-icon"/>
            <Label text="Students" styleClass="people-badge-text"/>
        </HBox>
    </HBox>

    <Separator styleClass="people-divider"/>

    <!-- ── Body ── -->
    <HBox VBox.vgrow="ALWAYS" maxHeight="Infinity">

        <!-- ══ Main content ══ -->
        <VBox HBox.hgrow="ALWAYS" maxHeight="Infinity" spacing="0">
            <padding>
                <Insets top="22" right="20" bottom="20" left="24"/>
            </padding>

            <!-- Search bar -->
            <HBox styleClass="people-search-wrap" spacing="10" alignment="CENTER_LEFT">
                <Label text="⊕" styleClass="people-search-icon"/>
                <TextField fx:id="searchField"
                           promptText="Search by name or university…"
                           styleClass="people-search-field"
                           HBox.hgrow="ALWAYS"
                           onKeyReleased="#onSearchKeyReleased"/>
            </HBox>

            <!-- Filter chips -->
            <HBox spacing="8" alignment="CENTER_LEFT" styleClass="people-filter-row">
                <Button fx:id="allDeptBtn" styleClass="people-chip people-chip-active" text="Everyone" onAction="#onFilterAll"/>
                <Button fx:id="cseDeptBtn" styleClass="people-chip" text="CSE" onAction="#onFilterCSE"/>
                <Button fx:id="eeeDeptBtn" styleClass="people-chip" text="EEE" onAction="#onFilterEEE"/>
                <Button fx:id="bbaDeptBtn" styleClass="people-chip" text="BBA" onAction="#onFilterBBA"/>
                <Region HBox.hgrow="ALWAYS"/>
                <Label text="Browse all students" styleClass="people-sort-label"/>
            </HBox>

            <Separator styleClass="people-divider" style="-fx-margin: 0 0 14 0;"/>

            <!-- People grid / list -->
            <ScrollPane fitToWidth="true"
                        styleClass="people-scroll"
                        VBox.vgrow="ALWAYS"
                        hbarPolicy="NEVER"
                        vbarPolicy="AS_NEEDED">
                <VBox fx:id="peopleVBox"
                      spacing="10"
                      styleClass="people-list"/>
            </ScrollPane>
        </VBox>

        <!-- ══ Right panel ══ -->
        <VBox styleClass="people-right-panel" spacing="20"
              minWidth="224" prefWidth="240" maxWidth="240">
            <padding>
                <Insets top="22" right="18" bottom="20" left="16"/>
            </padding>

            <!-- Tips card -->
            <VBox styleClass="people-widget-card" spacing="12">
                <HBox spacing="8" alignment="CENTER_LEFT">
                    <Label text="⬡" styleClass="people-widget-icon"/>
                    <Label text="How to Connect" styleClass="people-widget-title"/>
                </HBox>
                <VBox spacing="8">
                    <HBox styleClass="people-tip-row" spacing="10" alignment="CENTER_LEFT">
                        <Label text="1" styleClass="people-tip-num"/>
                        <Label text="Search for classmates by name" styleClass="people-tip-text" wrapText="true" HBox.hgrow="ALWAYS"/>
                    </HBox>
                    <HBox styleClass="people-tip-row" spacing="10" alignment="CENTER_LEFT">
                        <Label text="2" styleClass="people-tip-num"/>
                        <Label text="Visit their profile to learn more" styleClass="people-tip-text" wrapText="true" HBox.hgrow="ALWAYS"/>
                    </HBox>
                    <HBox styleClass="people-tip-row" spacing="10" alignment="CENTER_LEFT">
                        <Label text="3" styleClass="people-tip-num"/>
                        <Label text="Follow to see their posts in your feed" styleClass="people-tip-text" wrapText="true" HBox.hgrow="ALWAYS"/>
                    </HBox>
                </VBox>
            </VBox>

            <!-- Stats card -->
            <VBox styleClass="people-widget-card" spacing="10">
                <HBox spacing="8" alignment="CENTER_LEFT">
                    <Label text="◎" styleClass="people-widget-icon"/>
                    <Label text="Network Stats" styleClass="people-widget-title"/>
                </HBox>
                <VBox spacing="8">
                    <HBox styleClass="people-stat-row" alignment="CENTER_LEFT" spacing="10">
                        <Label text="◉" styleClass="people-stat-icon"/>
                        <Label text="You follow" styleClass="people-stat-key" HBox.hgrow="ALWAYS"/>
                        <Label fx:id="followingStatLabel" text="—" styleClass="people-stat-val"/>
                    </HBox>
                    <HBox styleClass="people-stat-row" alignment="CENTER_LEFT" spacing="10">
                        <Label text="⊕" styleClass="people-stat-icon"/>
                        <Label text="Followers" styleClass="people-stat-key" HBox.hgrow="ALWAYS"/>
                        <Label fx:id="followersStatLabel" text="—" styleClass="people-stat-val"/>
                    </HBox>
                </VBox>
            </VBox>

        </VBox>

    </HBox>
</VBox>
