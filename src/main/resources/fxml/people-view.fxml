<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.campasian.controller.PeopleController"
      styleClass="dashboard-main"
      stylesheets="@../styles/style.css"
      spacing="24" maxWidth="Infinity" maxHeight="Infinity">
    <padding>
        <Insets top="24" right="24" bottom="24" left="24"/>
    </padding>

    <!-- Page header -->
    <VBox styleClass="cc-header" spacing="4">
        <Label text="Discover People" styleClass="cc-headline"/>
        <Label text="Connect with fellow students and expand your campus network." styleClass="cc-description" wrapText="true"/>
    </VBox>

    <VBox spacing="8">
        <Label text="Search" styleClass="profile-label"/>
        <TextField fx:id="searchField" promptText="Search by name or university..." styleClass="material-input"
                   HBox.hgrow="ALWAYS" onKeyReleased="#onSearchKeyReleased"/>
    </VBox>
    <ScrollPane fitToWidth="true" styleClass="feed-scroll" VBox.vgrow="ALWAYS">
        <VBox fx:id="peopleVBox" spacing="12" styleClass="feed-container"/>
    </ScrollPane>
</VBox>
