<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.abir.demo.controllers.EventsController"
            style="-fx-background-color: linear-gradient(135deg, #0f172a 0%, #111827 30%, #0b1225 100%);">

    <!-- Top Navigation -->
    <top>
        <HBox spacing="15" style="-fx-padding: 15 20; -fx-background-color: rgba(15,23,42,0.9);"
              alignment="CENTER_LEFT">
            <Label text="Campasian" style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: white;"/>
            <Separator orientation="VERTICAL"/>
            <Button text="ðŸ  Feed" onAction="#goToDashboard" style="-fx-text-fill: white; -fx-background-color: transparent;"/>
            <Button text="ðŸ‘¤ Profile" onAction="#goToProfile" style="-fx-text-fill: white; -fx-background-color: transparent;"/>
            <Button text="ðŸ‘¥ Browse" onAction="#goToBrowseUsers" style="-fx-text-fill: white; -fx-background-color: transparent;"/>
            <Button text="ðŸŽ‰ Events" style="-fx-text-fill: white; -fx-background-color: transparent;"/>
            <Button text="ðŸŽ“ Clubs" onAction="#goToClubs" style="-fx-text-fill: white; -fx-background-color: transparent;"/>
            <Button text="ðŸ’¬ Messages" onAction="#goToMessages" style="-fx-text-fill: white; -fx-background-color: transparent;"/>
            <Region HBox.hgrow="ALWAYS"/>
            <Button text="ðŸšª Logout" onAction="#logout" style="-fx-text-fill: white; -fx-background-color: transparent;"/>
        </HBox>
    </top>

    <!-- Events Content -->
    <center>
        <VBox spacing="20" style="-fx-padding: 30;">
            <Label text="University Events" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: white;"/>

            <!-- Create Event Form -->
            <TitledPane text="Create New Event" expanded="false"
                       style="-fx-text-fill: white; -fx-background-color: rgba(255,255,255,0.05);
                              -fx-border-color: rgba(255,255,255,0.2);"/>
            
            <VBox spacing="10" style="-fx-border-color: rgba(255,255,255,0.2); -fx-border-radius: 10;
                                      -fx-background-color: rgba(255,255,255,0.05); -fx-padding: 15;">
                <TextField fx:id="eventNameField" promptText="Event Name"
                          style="-fx-control-inner-background: rgba(255,255,255,0.1); -fx-text-fill: white;"/>
                <TextArea fx:id="eventDescriptionArea" promptText="Event Description" wrapText="true" prefRowCount="3"
                         style="-fx-control-inner-background: rgba(255,255,255,0.1); -fx-text-fill: white;"/>
                <TextField fx:id="eventDateField" promptText="Date (YYYY-MM-DD)"
                          style="-fx-control-inner-background: rgba(255,255,255,0.1); -fx-text-fill: white;"/>
                <TextField fx:id="eventLocationField" promptText="Location"
                          style="-fx-control-inner-background: rgba(255,255,255,0.1); -fx-text-fill: white;"/>
                <Button fx:id="createEventButton" text="Create Event"/>
            </VBox>

            <!-- Events List -->
            <Label text="Upcoming Events" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: white;"/>
            <ScrollPane style="-fx-background: transparent; -fx-control-inner-background: transparent;">
                <VBox fx:id="eventsVBox" spacing="10" style="-fx-padding: 10;"/>
            </ScrollPane>
        </VBox>
    </center>
</BorderPane>
