<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.campasian.controller.ProfileController"
      styleClass="dashboard-main"
      stylesheets="@../styles/style.css"
      spacing="24" maxWidth="Infinity" maxHeight="Infinity">
    <padding>
        <Insets top="24" right="24" bottom="24" left="24"/>
    </padding>

    <!-- Page header -->
    <HBox styleClass="cc-header" spacing="16" alignment="CENTER_LEFT">
        <VBox spacing="4" HBox.hgrow="ALWAYS">
            <Label text="Profile" styleClass="cc-headline"/>
            <Label text="View your details, connections, and recent posts." styleClass="cc-description" wrapText="true"/>
        </VBox>
        <HBox spacing="12">
            <Button fx:id="editProfileBtn" text="Edit Profile" styleClass="btn-secondary" onAction="#onEditProfileClick" visible="false" managed="false"/>
            <Button fx:id="followBtn" text="Follow" styleClass="btn-primary" onAction="#onFollowClick" visible="false" managed="false"/>
            <Button fx:id="unfollowBtn" text="Unfollow" styleClass="btn-secondary" onAction="#onUnfollowClick" visible="false" managed="false"/>
        </HBox>
    </HBox>

    <HBox spacing="24" styleClass="profile-stats">
        <VBox spacing="4" styleClass="profile-stat">
            <Label fx:id="followersCountLabel" text="0" styleClass="profile-stat-value"/>
            <Label text="Followers" styleClass="profile-label"/>
        </VBox>
        <VBox spacing="4" styleClass="profile-stat">
            <Label fx:id="followingCountLabel" text="0" styleClass="profile-stat-value"/>
            <Label text="Following" styleClass="profile-label"/>
        </VBox>
    </HBox>
    <VBox styleClass="profile-card" spacing="16">
        <HBox spacing="16" alignment="CENTER_LEFT">
            <javafx.scene.image.ImageView fx:id="avatarImageView" fitWidth="80" fitHeight="80" preserveRatio="true" style="-fx-background-color: #E4E4E7; -fx-background-radius: 6;"/>
            <Label text="Profile Information" styleClass="profile-card-title"/>
        </HBox>
        <VBox spacing="16">
            <VBox spacing="4">
                <Label text="Full Name" styleClass="profile-label"/>
                <Label fx:id="fullNameLabel" styleClass="profile-value" text="—"/>
            </VBox>
            <VBox spacing="4">
                <Label text="University" styleClass="profile-label"/>
                <Label fx:id="universityLabel" styleClass="profile-value" text="—"/>
            </VBox>
            <VBox spacing="4">
                <Label text="Student ID" styleClass="profile-label"/>
                <Label fx:id="einLabel" styleClass="profile-value" text="—"/>
            </VBox>
            <VBox spacing="4">
                <Label text="Bio" styleClass="profile-label"/>
                <Label fx:id="bioLabel" styleClass="profile-value" text="—" wrapText="true"/>
            </VBox>
        </VBox>
    </VBox>
    <Label text="Posts" styleClass="profile-card-title"/>
    <ScrollPane fitToWidth="true" styleClass="feed-scroll" VBox.vgrow="ALWAYS">
        <VBox fx:id="postsVBox" spacing="12" styleClass="feed-container"/>
    </ScrollPane>
</VBox>
