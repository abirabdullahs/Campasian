<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox maxHeight="Infinity" maxWidth="Infinity" prefHeight="409.0" prefWidth="771.0" spacing="24" styleClass="dashboard-main" stylesheets="@../styles/style.css" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.campasian.controller.FeedController">
    <padding>
        <Insets bottom="24" left="24" right="24" top="24" />
    </padding>

    <!-- Page header -->
    <VBox styleClass="cc-header" maxWidth="600" spacing="4">
        <Label text="Your Feed" styleClass="cc-headline"/>
        <Label text="Read posts from students across campus and share your own updates." styleClass="cc-description" wrapText="true"/>
    </VBox>
    
    <!-- Main Feed Column -->
    <HBox spacing="24" HBox.hgrow="ALWAYS" VBox.vgrow="ALWAYS">
        <!-- Left: Feed Content -->
        <VBox maxWidth="600" spacing="24" HBox.hgrow="ALWAYS">
            <Button fx:id="createPostBtn" onAction="#onCreatePostClick" styleClass="create-post-btn" text="What's on your mind?" />
            <HBox spacing="8">
                <Button fx:id="feedGlobalBtn" onAction="#onFeedGlobalClick" styleClass="feed-filter-btn " text="Global" />
                <Button fx:id="feedFollowingBtn" onAction="#onFeedFollowingClick" styleClass="feed-filter-btn" text="Following" />
            </HBox>
            <ScrollPane fitToWidth="true" styleClass="feed-scroll" VBox.vgrow="ALWAYS">
                <VBox fx:id="feedVBox" spacing="12" styleClass="feed-container" />
            </ScrollPane>
        </VBox>
    </HBox>
</VBox>
