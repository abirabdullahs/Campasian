<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.*?>

<BorderPane xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.abir.demo.controllers.ProfileController"
            style="-fx-background-color: linear-gradient(135deg, #0f172a 0%, #111827 30%, #0b1225 100%);">

    <!-- Top Navigation -->
    <top>
        <HBox spacing="15" style="-fx-padding: 15 20; -fx-background-color: rgba(15,23,42,0.9);"
              alignment="CENTER_LEFT">
            <Label text="Campasian" style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: white;"/>
            <Separator orientation="VERTICAL"/>
            <Button text="ðŸ  Feed" onAction="#goToDashboard" style="-fx-text-fill: white; -fx-background-color: transparent;"/>
            <Button text="ðŸ‘¤ Profile" style="-fx-text-fill: white; -fx-background-color: transparent;"/>
            <Button text="ðŸ‘¥ Browse" onAction="#goToBrowseUsers" style="-fx-text-fill: white; -fx-background-color: transparent;"/>
            <Button text="ðŸŽ‰ Events" onAction="#goToEvents" style="-fx-text-fill: white; -fx-background-color: transparent;"/>
            <Button text="ðŸŽ“ Clubs" onAction="#goToClubs" style="-fx-text-fill: white; -fx-background-color: transparent;"/>
            <Button text="ðŸ’¬ Messages" onAction="#goToMessages" style="-fx-text-fill: white; -fx-background-color: transparent;"/>
            <Region HBox.hgrow="ALWAYS"/>
            <Button text="ðŸšª Logout" onAction="#logout" style="-fx-text-fill: white; -fx-background-color: transparent;"/>
        </HBox>
    </top>

    <!-- Profile Content -->
    <center>
        <VBox spacing="20" style="-fx-padding: 30;">
            <!-- Profile Header -->
            <VBox spacing="15" style="-fx-border-color: rgba(255,255,255,0.2); -fx-border-radius: 15;
                                      -fx-background-color: rgba(255,255,255,0.05); -fx-padding: 25;">
                <!-- Profile Picture -->
                <Circle radius="60" style="-fx-fill: linear-gradient(135deg, #38bdf8, #a855f7);"/>

                <!-- User Info -->
                <Label fx:id="userNameLabel" style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: white;"/>
                <Label fx:id="emailLabel" style="-fx-font-size: 14px; -fx-text-fill: rgba(255,255,255,0.7);"/>
                <Label fx:id="universityLabel" style="-fx-font-size: 14px; -fx-text-fill: rgba(255,255,255,0.7);"/>

                <!-- Stats -->
                <HBox spacing="30" style="-fx-padding: 15 0;">
                    <VBox alignment="CENTER">
                        <Label style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #38bdf8;">1,234</Label>
                        <Label text="Posts" style="-fx-text-fill: rgba(255,255,255,0.7);"/>
                    </VBox>
                    <VBox alignment="CENTER">
                        <Label fx:id="followersLabel" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #a855f7;"/>
                        <Label text="Followers" style="-fx-text-fill: rgba(255,255,255,0.7);"/>
                    </VBox>
                    <VBox alignment="CENTER">
                        <Label fx:id="followingLabel" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #f43f5e;"/>
                        <Label text="Following" style="-fx-text-fill: rgba(255,255,255,0.7);"/>
                    </VBox>
                </HBox>
            </VBox>

            <!-- Bio Section -->
            <VBox spacing="10">
                <Label text="Bio" style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: white;"/>
                <TextArea fx:id="bioTextArea" wrapText="true" prefRowCount="4"
                         style="-fx-control-inner-background: rgba(255,255,255,0.1); -fx-text-fill: white;"/>
            </VBox>

            <!-- Action Buttons -->
            <HBox spacing="10">
                <Button fx:id="editButton" text="Edit Profile"
                       style="-fx-padding: 10px 30px; -fx-font-size: 14px; -fx-background-color: linear-gradient(to right, #38bdf8, #a855f7); -fx-text-fill: white; -fx-background-radius: 20;"/>
                <Button fx:id="saveButton" text="Save Changes" visible="false"
                       style="-fx-padding: 10px 30px; -fx-font-size: 14px; -fx-background-color: linear-gradient(to right, #10b981, #059669); -fx-text-fill: white; -fx-background-radius: 20;"/>
            </HBox>
        </VBox>
    </center>
</BorderPane>
